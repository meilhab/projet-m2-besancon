<project name="exo6" default="execute">

	<!-- directory definition -->

	<property name="src" value="${basedir}/src" />
	<property name="build" value="${basedir}/build" />
	<property name="externals" value="${basedir}/../externals" />

	<property file="${basedir}/etc/build.properties" />
	<property file="${basedir}/etc/execute.properties" />

	<!-- Building of a path which contains external jars -->

	<path id="classpath">
		<pathelement path="${asm.path}" />
		<pathelement path="${fractal.path}" />
		<pathelement path="${julia.path}" />
		<pathelement path="${fractaladl.path}" />
		<pathelement location="${build}" />
		<pathelement location="${src}" />
	</path>

	<!-- ================================== -->
	<!--              CLEAN                 -->
	<!-- ================================== -->

	<target name="clean" description="Delete old build directory">
		<delete dir="${build}" />
	</target>


	<!-- ================================== -->
	<!--              EXECUTE               -->
	<!-- ================================== -->

	<target name="execute" depends="compile">
		<java classname="${run.classname}" classpathref="classpath" fork="yes" failonerror="yes">
			<jvmarg line="${run.jvm.parameters}" />
			<jvmarg value="-Xdebug" />
			<!--<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=5432" />-->
			<arg line="${run.parameters}" />
		</java>
	</target>

	<!-- ================================== -->
	<!--              COMPILE               -->
	<!-- ================================== -->

	<target name="compile">
		<mkdir dir="${build}" />
		<javac srcdir="${src}" destdir="${build}" debug="true">
			<classpath refid="classpath" />
			<include name="**/*.java" />
		</javac>
	</target>

</project>
